{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "header_text",
      "label": "Header Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<style>
.gift-guide-banner {
  width: 100%;
  max-width: 1440px;
  margin: 0 auto;
  background: #FFFFFF;
  padding: 20px;
}

.gift-guide-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10px 50px;
  gap: 24px;
  width: 100%;
  max-width: 1440px;
  height: 64px;
  background: #F5F5F5;
  flex: none;
  order: 0;
  align-self: stretch;
  flex-grow: 0;
}

.header-logo {
  width: 151.44px;
  height: 19px;
  font-family: 'Jost';
  font-style: normal;
  font-weight: 500;
  font-size: 20px;
  line-height: 100%;
  color: #000000;
  flex: none;
  order: 0;
  flex-grow: 0;
}

.header-text {
  width: 260px;
  height: 14px;
  font-family: 'Jost';
  font-style: normal;
  font-weight: 400;
  font-size: 16px;
  line-height: 13px;
  display: flex;
  align-items: center;
  text-align: center;
  color: #000000;
  flex: none;
  order: 1;
  flex-grow: 0;
}

.choose-gift-button {
  width: 207px;
  height: 44px;
  position: relative;
  flex: none;
  order: 2;
  flex-grow: 0;
}

.choose-gift-button__bg {
  box-sizing: border-box;
  position: absolute;
  left: 0%;
  right: 0%;
  top: 0%;
  bottom: 0%;
  background: #FFF544;
}

.choose-gift-button__line {
  position: absolute;
  left: 77.78%;
  right: 10.63%;
  top: 48.99%;
  bottom: 51.01%;
  background: #000000;
  border: 1.5px solid #000000;
}

.choose-gift-button__text {
  position: absolute;
  left: 19.81%;
  right: 30.92%;
  top: 26.51%;
  bottom: 25.76%;
  font-family: 'Jost';
  font-style: normal;
  font-weight: 400;
  font-size: 16px;
  line-height: 20px;
  display: flex;
  align-items: center;
  text-align: center;
  text-transform: uppercase;
  color: #000000;
}

.main-content {
  width: 1440px;
  height: 780px;
  flex: none;
  order: 1;
  flex-grow: 0;
  position: relative;
  background: #FFFFFF;
}

.gift-guide-title {
  position: absolute;
  left: 4.65%;
  right: 63.47%;
  top: 55.69%;
  bottom: 36.33%;
  font-family: 'Jost';
  font-style: normal;
  font-weight: 500;
  font-size: 70px;
  line-height: 100%;
  display: flex;
  align-items: center;
  color: #000000;
}

.gift-guide-description {
  position: absolute;
  width: 483px;
  height: 84px;
  left: calc(50% - 483px/2 - 411.5px);
  top: 609px;
  font-family: 'Jost';
  font-style: normal;
  font-weight: 400;
  font-size: 20px;
  line-height: 140%;
  display: flex;
  align-items: center;
  color: #000000;
}

.shop-now-button {
  position: absolute;
  width: 220px;
  height: 50px;
  left: 67px;
  top: 743px;
  background: #000000;
  transition: background-color 0.3s ease;
}

.shop-now-button:hover {
  background: #FFF544;
}

.shop-now-button:hover .shop-now-button__text {
  color: #000000;
}

.shop-now-button__line {
  position: absolute;
  left: 77.78%;
  right: 10.63%;
  top: 48.99%;
  bottom: 51.01%;
  background: #FFFFFF;
  border: 1.5px solid #FFFFFF;
  transition: all 0.3s ease;
}

.shop-now-button__text {
  position: absolute;
  left: 25.03%;
  right: 35.42%;
  top: 28.51%;
  bottom: 29.49%;
  font-family: 'Jost';
  font-style: normal;
  font-weight: 400;
  font-size: 16px;
  line-height: 20px;
  display: flex;
  align-items: center;
  text-align: center;
  text-transform: uppercase;
  color: #FFFFFF;
  transition: color 0.3s ease;
}

.footer-banner {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 10px 50px;
  gap: 375px;
  width: 1440px;
  height: 34px;
  background: #F5F5F5;
  flex: none;
  order: 2;
  align-self: stretch;
  flex-grow: 0;
}

.footer-text {
  width: 451px;
  height: 14px;
  font-family: 'Jost';
  font-style: normal;
  font-weight: 400;
  font-size: 16px;
  line-height: 13px;
  display: flex;
  align-items: center;
  text-align: center;
  color: #000000;
  flex: none;
  order: 0;
  flex-grow: 0;
}

.banner-svg-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 780px;
  z-index: 0;
  overflow: hidden;
}

.banner-svg {
  max-width: 100%;
  height: auto;
  object-fit: contain;
  display: block;
}

@media screen and (max-width: 768px) {
  .gift-guide-banner {
    padding: 2rem 0.5rem;
  }

  .gift-guide-header {
    flex-direction: column;
    gap: 12px;
    height: auto;
    padding: 10px 10px;
  }

  .banner-image {
    margin-bottom: 16px;
  }
}
</style>

<div class="gift-guide-banner" style="background:#F5F5F5;min-height:600px;display:flex;flex-direction:column;align-items:center;justify-content:center;position:relative;">
  <div class="banner-image" style="width:100%;display:flex;justify-content:center;align-items:center;margin-bottom:32px;">
    {{ 'gift-guide-illustration.svg' | asset_url | img_tag: 'Banner Illustration', 'banner-svg' }}
  </div>
  <h1 class="gift-guide-title" style="font-size:3rem;font-weight:600;text-align:center;margin-bottom:16px;">{{ section.settings.heading }}</h1>
  <div class="gift-guide-description" style="font-size:1.25rem;text-align:center;margin-bottom:32px;max-width:600px;">{{ section.settings.description }}</div>
  <button class="shop-now-button" style="background:#000;color:#fff;padding:16px 32px;font-size:1rem;border:none;border-radius:4px;transition:background 0.3s;color 0.3s;cursor:pointer;margin-bottom:32px;">
    <span class="shop-now-button__text">{{ section.settings.button_text }}</span>
  </button>
  <div class="footer-banner" style="width:100%;text-align:center;margin-top:auto;padding:16px 0;background:#fff544;color:#000;font-size:1rem;">
    {{ section.settings.footer_text }}
  </div>
</div>
