  order: 0;
  align-self: stretch;
  flex-grow: 0;
}

.gift-guide-header {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 10px 50px;
  gap: 360px;
  width: 1440px;
  height: 64px;
  background: #F5F5F5;
  flex: none;
  order: 0;
  align-self: stretch;
  flex-grow: 0;
}

.logo {
  width: 151.44px;
  height: 19px;
