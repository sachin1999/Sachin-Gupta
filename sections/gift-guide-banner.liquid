{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<style>
.gift-guide-banner {
  padding: 4rem 2rem;
  text-align: center;
  position: relative;
  background-color: #fff;
  overflow: hidden;
}

.gift-guide-banner__background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.1;
  z-index: 1;
}

.gift-guide-banner__content {
  position: relative;
  z-index: 2;
  max-width: 1200px;
  margin: 0 auto;
}

.gift-guide-banner__title {
  font-size: 1.2rem;
  margin-bottom: 1rem;
  font-weight: 500;
}

.gift-guide-banner__subtitle {
  font-size: 1rem;
  margin-bottom: 2rem;
  color: #666;
}

.gift-guide-banner__heading {
  font-size: 3.5rem;
  margin-bottom: 1.5rem;
  font-weight: 600;
}

.gift-guide-banner__description {
  font-size: 1.1rem;
  max-width: 600px;
  margin: 0 auto 2rem;
  line-height: 1.6;
}

.gift-guide-banner__button {
  display: inline-flex;
  align-items: center;
  padding: 1rem 2rem;
  background-color: #000;
  color: #fff;
  text-decoration: none;
  font-weight: 500;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
}

.gift-guide-banner__button svg {
  margin-left: 0.5rem;
  transition: transform 0.3s ease;
}

.gift-guide-banner__button:hover {
  background-color: #FFD700;
  color: #000;
}

.gift-guide-banner__button:hover svg {
  transform: translateX(5px);
}

.gift-guide-banner__footer {
  margin-top: 2rem;
  font-size: 0.9rem;
  color: #666;
}

@media screen and (max-width: 768px) {
  .gift-guide-banner {
    padding: 3rem 1rem;
  }

  .gift-guide-banner__heading {
    font-size: 2.5rem;
  }

  .gift-guide-banner__description {
    font-size: 1rem;
  }
}
</style>

<div class="gift-guide-banner">
  <div class="gift-guide-banner__content">
    <h3 class="gift-guide-banner__title">{{ section.settings.title }}</h3>
    <div class="gift-guide-banner__subtitle">{{ section.settings.subtitle }}</div>
    <h1 class="gift-guide-banner__heading">{{ section.settings.heading }}</h1>
    <div class="gift-guide-banner__description">
      {{ section.settings.description }}
    </div>
    <button class="gift-guide-banner__button">
      {{ section.settings.button_text }}
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </button>
    <div class="gift-guide-banner__footer">
      {{ section.settings.footer_text }}
    </div>
  </div>
</div>
