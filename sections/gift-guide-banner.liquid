{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "header_text",
      "label": "Header Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<style>
@import url('https://fonts.googleapis.com/css2?family=Jost:wght@400;500;600&display=swap');

.gift-guide-wrapper {
  font-family: 'Jost', sans-serif;
  width: 100%;
  /* removed max-width for full bleed */
  margin: 0;
  background: #FFFFFF;
  overflow: hidden;
}

/* Header Section */
.gift-guide-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 50px;
  height: 64px;
  background: #F5F5F5;
  width: 100%;
}

.header-logo {
  font-family: 'Jost', sans-serif;
  font-weight: 500;
  font-size: 20px;
  line-height: 1;
  color: #000000;
  letter-spacing: 0.5px;
}

.header-text {
  font-family: 'Jost', sans-serif;
  font-weight: 400;
  font-size: 16px;
  color: #000000;
  text-align: center;
  flex: 1;
  margin: 0 20px;
}

.choose-gift-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  width: 207px;
  height: 44px;
  background: #FFF544;
  border: none;
  cursor: pointer;
  font-family: 'Jost', sans-serif;
  font-weight: 400;
  font-size: 16px;
  text-transform: uppercase;
  color: #000000;
  transition: all 0.3s ease;
}

.choose-gift-button:hover {
  background: #000000;
  color: #FFF544;
}

/* Main Content Section */
.main-content {
  position: relative;
  width: 100%;
  min-height: 780px;
  height: 80vh; /* responsive height */
  background: #FFFFFF;
  display: flex;
  align-items: stretch;
  justify-content: flex-start;
}

.content-container {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
  padding: 0 0 160px 67px; /* bottom space for text */
  max-width: 1600px; /* optional cap */
  margin: 0 auto;
  z-index: 2;
}

.text-content {
  position: relative; /* no absolute, relies on flex alignment */
  left: auto;
  bottom: auto;
  max-width: 500px;
  z-index: 3;
}

.gift-guide-title {
  font-family: 'Jost', sans-serif;
  font-weight: 500;
  font-size: 70px;
  line-height: 1;
  color: #000000;
  margin: 0 0 24px 0;
}

.gift-guide-description {
  font-family: 'Jost', sans-serif;
  font-weight: 400;
  font-size: 20px;
  line-height: 1.4;
  color: #000000;
  margin: 0 0 40px 0;
  max-width: 483px;
}

.shop-now-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  width: 220px;
  height: 50px;
  background: #FFF544;
  border: none;
  cursor: pointer;
  font-family: 'Jost', sans-serif;
  font-weight: 500;
  font-size: 16px;
  text-transform: uppercase;
  color: #000000;
  transition: all 0.3s ease;
}

.shop-now-button:hover {
  background: #000000;
  color: #FFF544;
}

.banner-image-container {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.banner-svg {
  width: 100%;
  height: 100%;
  object-fit: cover; /* fill entire area */
  object-position: center; /* center focus */
  display: block;
  pointer-events: none;
  user-select: none;
}

/* Footer Section */
.footer-banner {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px 50px;
  height: 34px;
  background: #F5F5F5;
  width: 100%;
}

.footer-text {
  font-family: 'Jost', sans-serif;
  font-weight: 400;
  font-size: 16px;
  line-height: 1;
  color: #000000;
  text-align: center;
}

/* Arrow Icons */
.arrow-icon {
  width: 20px;
  height: 20px;
  stroke: currentColor;
  stroke-width: 2;
  fill: none;
}

/* Responsive Design */
@media screen and (max-width: 1200px) {
  .content-container {
    padding: 0 40px;
  }
  
  .text-content {
    left: auto;
  }
}

@media screen and (max-width: 968px) {
  .gift-guide-header {
    flex-direction: column;
    gap: 16px;
    height: auto;
    padding: 20px;
    text-align: center;
  }
  
  .header-text {
    margin: 0;
  }
  
  .choose-gift-button {
    width: 180px;
    height: 40px;
    font-size: 14px;
  }
  
  .main-content {
    height: auto;
    min-height: 600px;
  }
  
  .content-container {
    flex-direction: column;
    align-items: center;
    padding: 80px 20px 60px;
  }
  
  .text-content {
    text-align: center;
    padding: 0;
  }
  
  .gift-guide-title {
    font-size: 48px;
  }
  
  .gift-guide-description {
    font-size: 18px;
    text-align: center;
  }
  
  .shop-now-button {
    width: 200px;
    margin: 0 auto;
  }
}

@media screen and (max-width: 568px) {
  .gift-guide-header {
    padding: 15px;
  }
  
  .header-logo {
    font-size: 18px;
  }
  
  .header-text {
    font-size: 14px;
  }
  
  .choose-gift-button {
    width: 160px;
    height: 36px;
    font-size: 12px;
  }
  
  .main-content {
    min-height: 500px;
    padding: 30px 15px;
  }
  
  .content-container {
    padding: 60px 15px 40px;
  }
  
  .gift-guide-title {
    font-size: 36px;
    margin-bottom: 20px;
  }
  
  .gift-guide-description {
    font-size: 16px;
    margin-bottom: 30px;
  }
  
  .shop-now-button {
    width: 180px;
    height: 45px;
    font-size: 14px;
  }
  
  .banner-image-container {
    height: 250px;
  }
  
  .footer-text {
    font-size: 14px;
  }
}
</style>

<div class="gift-guide-wrapper">
  <!-- Header Section -->
  <div class="gift-guide-header">
    <div class="header-logo">{{ section.settings.title }}</div>
    <div class="header-text">{{ section.settings.header_text }}</div>
    <button class="choose-gift-button">
      CHOOSE GIFT
      <svg class="arrow-icon" viewBox="0 0 24 24">
        <path d="M5 12h14M12 5l7 7-7 7" />
      </svg>
    </button>
  </div>

  <!-- Main Content Section -->
  <div class="main-content">
    <div class="banner-image-container">
      {% if section.settings.banner_image %}
        {{ section.settings.banner_image | image_url: width: 3000 | image_tag: alt: section.settings.heading, class: 'banner-svg' }}
      {% else %}
        {{ 'gift-guide-illustration.svg' | asset_url | img_tag: 'Gift Guide Illustration', 'banner-svg' }}
      {% endif %}
    </div>
    <div class="content-container">
      <div class="text-content">
        <h1 class="gift-guide-title">{{ section.settings.heading }}</h1>
        <div class="gift-guide-description">{{ section.settings.description }}</div>
        <button class="shop-now-button">
          {{ section.settings.button_text }}
          <svg class="arrow-icon" viewBox="0 0 24 24">
            <path d="M5 12h14M12 5l7 7-7 7" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Footer Section -->
  <div class="footer-banner">
    <div class="footer-text">{{ section.settings.footer_text }}</div>
  </div>
</div>
