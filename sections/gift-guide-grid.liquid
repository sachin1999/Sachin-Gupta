</style>

<div class="product-grid">
  <h2 class="product-grid__title">{{ section.settings.title }}</h2>
    <div class="product-grid__items">
    {% for block in section.blocks %}
      {% if block.settings.product != blank %}
        {% assign product = all_products[block.settings.product] %}
        {% if product and product.id %}
          <div class="product-item" 
               data-product-id="{{ product.id }}" 
               data-product-handle="{{ product.handle }}"
               data-block-id="{{ block.id }}">
            
            {% if product.featured_image %}
              <img 
                src="{{ product.featured_image | image_url: width: 700, height: 700, crop: 'center' }}"
                alt="{{ product.title }}"
                class="product-item__image"
                loading="lazy"
              >
            {% else %}
              <div class="product-item__image" style="background: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999;">
                No Image
              </div>
            {% endif %}
            
            <div class="product-item__info">
              <h3 class="product-item__title">{{ product.title }}</h3>
              <div class="product-item__price">
                {{ product.price | money }}
                {% if product.compare_at_price > product.price %}
                  <span style="text-decoration: line-through; opacity: 0.7; margin-left: 8px;">
                    {{ product.compare_at_price | money }}
                  </span>
                {% endif %}
              </div>
            </div>
            
            <button class="quick-view-button" aria-label="Quick view {{ product.title }}">
              <svg viewBox="0 0 24 24" fill="none">
                <path d="M12 5v14M5 12h14"/>
              </svg>
            </button>
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
</div>

<!-- Popup Overlay -->
<div class="product-popup-overlay" id="productPopupOverlay">
  <div class="product-popup">
    <div class="product-popup__loading" id="popupLoading">Loading product...</div>
    <div class="product-popup__content" id="popupContent" style="display:none;">
      <div class="product-popup__header">
        <button class="product-popup__close" aria-label="Close popup"></button>
        <div class="product-popup__image" id="popupImage"></div>
        <h3 class="product-popup__title" id="popupTitle"></h3>
        <div class="product-popup__price" id="popupPrice"></div>
      </div>
      <div class="product-popup__body">
        <div class="product-popup__description" id="popupDescription"></div>
        <div class="product-popup__variants" id="popupVariants"></div>
        <div class="size-selector" id="sizeSelector" style="display:none;">
          <label class="size-selector__label">Size</label>
          <div class="size-selector__dropdown" id="sizeDropdown">
            <span class="size-selector__selected">Choose your size</span>
            <div class="size-selector__arrow"></div>
            <div class="size-selector__options" id="sizeOptions"></div>
          </div>
        </div>
        <button class="product-popup__add-to-cart" id="addToCartBtn" disabled>
          ADD TO CART
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </button>
      </div>
    </div>
  </div>
</div>

<script>
(function(){'use strict';
class ProductPopupManager {
  constructor(){
    this.overlay=document.getElementById('productPopupOverlay');
    this.loading=document.getElementById('popupLoading');
    this.content=document.getElementById('popupContent');
    this.imageEl=document.getElementById('popupImage');
    this.titleEl=document.getElementById('popupTitle');
    this.priceEl=document.getElementById('popupPrice');
    this.descEl=document.getElementById('popupDescription');
    this.variantsContainer=document.getElementById('popupVariants');
    this.sizeSelector=document.getElementById('sizeSelector');
    this.sizeDropdown=document.getElementById('sizeDropdown');
    this.sizeOptionsEl=document.getElementById('sizeOptions');
    this.sizeSelectedEl=this.sizeDropdown.querySelector('.size-selector__selected');
    this.addBtn=document.getElementById('addToCartBtn');
    this.closeBtn=this.overlay.querySelector('.product-popup__close');
    this.currentProduct=null; this.selectedVariant=null; this.selectedOptions={};
    this.winterJacketProduct={{ section.settings.winter_jacket | json }};
    this.bindEvents();
  }
  bindEvents(){
    document.addEventListener('click',(e)=>{
      const btn=e.target.closest('.quick-view-button');
      if(btn){ e.preventDefault(); const item=btn.closest('.product-item'); if(item){ this.open(item.dataset.productHandle); } }
    });
    this.closeBtn.addEventListener('click',()=>this.close());
    this.overlay.addEventListener('click',e=>{ if(e.target===this.overlay) this.close(); });
    document.addEventListener('keydown',e=>{ if(e.key==='Escape'&&this.overlay.classList.contains('active')) this.close(); });
    this.addBtn.addEventListener('click',()=>this.handleAdd());
    this.sizeDropdown.addEventListener('click',e=>{ if(e.target.closest('.size-selector__option')) return; this.sizeDropdown.classList.toggle('open'); this.sizeOptionsEl.classList.toggle('show'); });
    document.addEventListener('click',e=>{ if(!this.sizeDropdown.contains(e.target)){ this.sizeDropdown.classList.remove('open'); this.sizeOptionsEl.classList.remove('show'); }});
  }
  async open(handle){ if(!handle){return;} this.showLoading(); this.overlay.classList.add('active');
    try { const r=await fetch(`/products/${handle}.js`); if(!r.ok) throw new Error('Fetch failed'); const p=await r.json(); this.currentProduct=p; this.prepare(p); this.hideLoading(); }
    catch(err){ console.error(err); this.hideLoading(); this.close(); alert('Unable to load product.'); }
  }
  prepare(p){ this.titleEl.textContent=p.title; this.priceEl.textContent=this.money(p.price); this.descEl.textContent=(p.description? p.description.replace(/<[^>]*>/g,''):'').slice(0,140); // plain text snippet
    // Image
    let imgSrc=(p.featured_image && (p.featured_image.src||p.featured_image)) || (p.images && p.images[0]);
    if(imgSrc){ if(!imgSrc.startsWith('http')) imgSrc=`https:${imgSrc}`; imgSrc=imgSrc.replace(/(\.jpg|\.jpeg|\.png|\.gif)(\?.*)?$/i,'_300x$1'); this.imageEl.style.backgroundImage=`url(${imgSrc})`; }
    // Build variant groups excluding Size
    this.buildVariantGroups(p);
    this.buildSizeDropdown(p);
    this.updateVariant();
  }
  buildVariantGroups(p){ this.variantsContainer.innerHTML=''; this.selectedOptions={}; if(!p.options || !p.variants) return; p.options.forEach((optName,optIndex)=>{ if(optName.toLowerCase()==='size') return; const values=[...new Set(p.variants.map(v=>v.options[optIndex]))]; if(values.length<2) return; const group=document.createElement('div'); group.className='variant-group'; const label=document.createElement('label'); label.className='variant-group__label'; label.textContent=optName; const wrap=document.createElement('div'); wrap.className='variant-group__options'; wrap.dataset.optionName=optName; values.forEach(val=>{ const b=document.createElement('button'); b.type='button'; b.className='variant-option'; b.textContent=val; b.dataset.value=val; b.addEventListener('click',()=>{ wrap.querySelectorAll('.variant-option').forEach(o=>o.classList.remove('selected')); b.classList.add('selected'); this.selectedOptions[optName]=val; this.updateVariant(); }); wrap.appendChild(b); }); if(wrap.firstElementChild){ wrap.firstElementChild.classList.add('selected'); this.selectedOptions[optName]=wrap.firstElementChild.dataset.value; } group.appendChild(label); group.appendChild(wrap); this.variantsContainer.appendChild(group); }); }
  buildSizeDropdown(p){ const sizeIndex=p.options? p.options.findIndex(o=>o.toLowerCase()==='size'):-1; if(sizeIndex===-1){ this.sizeSelector.style.display='none'; return;} this.sizeSelector.style.display='block'; const sizes=[...new Set(p.variants.map(v=>v.options[sizeIndex]))]; this.sizeOptionsEl.innerHTML=''; sizes.forEach(sz=>{ const btn=document.createElement('button'); btn.type='button'; btn.className='size-selector__option'; btn.textContent=sz; btn.dataset.value=sz; btn.addEventListener('click',()=>{ this.sizeSelectedEl.textContent=sz; this.selectedOptions.Size=sz; this.sizeDropdown.classList.remove('open'); this.sizeOptionsEl.classList.remove('show'); this.updateVariant(); }); this.sizeOptionsEl.appendChild(btn); }); this.sizeSelectedEl.textContent='Choose your size'; this.selectedOptions.Size=null; }
  updateVariant(){ if(!this.currentProduct) return; const p=this.currentProduct; const ordered=p.options.map(name=>{ if(name.toLowerCase()==='size') return this.selectedOptions.Size; return this.selectedOptions[name]; }); let match=p.variants.find(v=> v.options.every((o,i)=> !ordered[i] || ordered[i]===o)); if(!match) match=p.variants[0]; this.selectedVariant=match; this.priceEl.textContent=this.money(match.price); this.addBtn.disabled=!match.available; }
  async handleAdd(){ if(!this.selectedVariant) return; try{ await this.addToCart(this.selectedVariant.id,1); // auto add logic
      const optVals=Object.values(this.selectedOptions);
      if((optVals.includes('Black')||optVals.includes('Medium')) && this.winterJacketProduct && this.winterJacketProduct.variants && this.winterJacketProduct.variants[0]){ await this.addToCart(this.winterJacketProduct.variants[0].id,1); }
      this.close(); document.dispatchEvent(new CustomEvent('cart:refresh')); }catch(e){ console.error(e); alert('Add to cart failed'); } }
  async addToCart(id,qty){ const r=await fetch('/cart/add.js',{method:'POST',headers:{'Content-Type':'application/json','Accept':'application/json'},body:JSON.stringify({id,quantity:qty})}); if(!r.ok) throw new Error(await r.text()); return r.json(); }
  money(c){ return (c/100).toLocaleString('en-US',{style:'currency',currency:'USD'}); }
  showLoading(){ this.loading.classList.add('active'); this.content.style.display='none'; }
  hideLoading(){ this.loading.classList.remove('active'); this.content.style.display='block'; }
  close(){ this.overlay.classList.remove('active'); setTimeout(()=>{ if(!this.overlay.classList.contains('active')){ this.currentProduct=null; this.selectedVariant=null; this.variantsContainer.innerHTML=''; this.sizeOptionsEl.innerHTML=''; }},300); }
}
if(document.readyState==='loading'){ document.addEventListener('DOMContentLoaded',()=>new ProductPopupManager()); } else { new ProductPopupManager(); }
})();
</script>
