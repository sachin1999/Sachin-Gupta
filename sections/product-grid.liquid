{% schema %}
{
  "name": "Product Grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Tisso vison in the wild"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Product Grid",
      "category": "Collection"
    }
  ]
}
{% endschema %}

<style>
.product-grid-container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 0;
  gap: 90px;
  width: 1440px;
  height: 2000px;
  background: #FFFFFF;
}

.grid-section {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 0;
  gap: 30px;
  width: 1337px;
  height: 981px;
  flex: none;
  order: 1;
  flex-grow: 0;
}

.grid-title {
  width: 372px;
  height: 43px;
  font-family: 'Lustria';
  font-style: normal;
  font-weight: 400;
  font-size: 36px;
  line-height: 120%;
  display: flex;
  align-items: center;
  color: #000000;
  flex: none;
  order: 0;
  flex-grow: 0;
}

.product-grid {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  align-content: flex-start;
  padding: 0;
  gap: 20px;
  width: 1339px;
  height: 908px;
  flex: none;
  order: 1;
  flex-grow: 0;
}

.product-item {
  width: 433px;
  height: 444px;
  position: relative;
  flex: none;
  flex-grow: 0;
}

.product-image {
  width: 433px;
  height: 444px;
  object-fit: cover;
}

.quick-view-button {
  position: absolute;
  width: 22px;
  height: 22px;
  background: rgba(248, 248, 248, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.quick-view-button svg {
  width: 12px;
  height: 12px;
  stroke: #000000;
  stroke-width: 1.5px;
}

.quick-view-icon {
  position: relative;
  width: 100%;
  height: 100%;
}

.quick-view-icon::before,
.quick-view-icon::after {
  content: '';
  position: absolute;
  background: #000000;
  border: 1.5px solid #000000;
}

.quick-view-icon::before {
  width: 8px;
  height: 1.5px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.quick-view-icon::after {
  width: 1.5px;
  height: 8px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* Product-specific quick view button positions */
.product-item:nth-child(1) .quick-view-button {
  left: 256.5px;
  top: 238px;
}

.product-item:nth-child(2) .quick-view-button {
  left: 355.5px;
  top: 222px;
}

.product-item:nth-child(3) .quick-view-button {
  left: 261px;
  top: 82px;
}

.product-item:nth-child(4) .quick-view-button {
  left: 301.5px;
  top: 71px;
}

.product-item:nth-child(5) .quick-view-button {
  left: 212.5px;
  top: 104px;
}

.product-item:nth-child(6) .quick-view-button {
  left: 319.5px;
  top: 164px;
}
</style>

<div class="product-grid-container">
  <div class="grid-section">
    <h2 class="grid-title">{{ section.settings.title }}</h2>
    <div class="product-grid">
      {% for product in section.settings.collection.products limit: 6 %}
        <div class="product-item">
          <img 
            src="{{ product.featured_image | img_url: '433x444', crop: 'center' }}"
            alt="{{ product.title }}"
            class="product-image"
            loading="lazy"
          >
          <button class="quick-view-button" aria-label="Quick view {{ product.title }}">
            <div class="quick-view-icon"></div>
          </button>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% javascript %}
document.querySelectorAll('.quick-view-button').forEach(button => {
  button.addEventListener('click', function() {
    // Add quick view functionality here
  });
});
{% endjavascript %}
